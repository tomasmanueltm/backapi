{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": { 
    "transpileOnly": true 
  },
  "include": [
    "src",
    "package.json"
  ],
 "exclude": [
    "src/**/*.test.ts"
  ]
}